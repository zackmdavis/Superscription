<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="superscription-brand">Superscription</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav superscription-nav-button-group">
        <% if current_user %>
          <li><%= button_to "Read!", read_url, :method => :get, :id => :read_button %>
          <li><%= button_to "My Subscriptions", user_subscriptions_url(current_user.id), :method => :get %>
          <li><%= button_to "Sign out", destroy_user_session_url, :method => :delete %>
          <% else %>
          <li><%= button_to "Sign up", new_user_registration_url, :method => :get %>
