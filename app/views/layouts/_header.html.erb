<div class="navbar navbar-static-top navbar-inverse">
<div class="navbar-inner">
  <div class="pull-left">
    <p class="superscription-brand pull-left">Superscription</p>
    <p class="header-subtext"><em>an RSS subscription manager</em></p>
  </div>

  <ul class="nav pull-left">
    <% if current_user %>
      <li><p class="header-subtext">logged in as <strong><%= current_user.username %></strong></p></li>
      <li><%= button_to "Read!", read_url, :method => :get, :class => "btn btn-success" %></li>
      <li><%= button_to "My Subscriptions", user_subscriptions_url(current_user.id), :method => :get, :class => "btn btn-info" %></li>
      <li><%= button_to "Sign out", destroy_user_session_url, :method => :delete, :class => "btn btn-info" %></li>
    <% else %>
      <li><%= button_to "Sign up", new_user_registration_url, :method => :get, :class =>  "btn btn-info" %></li>
      <li><%= button_to "Sign in", new_user_session_url, :method => :get, :class =>  "btn btn-info" %></li>
    <% end %>
  </ul>
</div>
</div>
