<div class="row">
<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
  <% entries.each do |entry| %>
    <div class="well" id="entry-well-<%= entry.id %>">
    <h4><%= link_to entry.title, entry.url %></h4>
    <p><%= entry.author.html_safe unless entry.author.nil? %></p>
    <p><%= entry.datetime.to_formatted_s(:superscription_custom) %></p>
    <p>from <em><%= entry.subscription.title %></em></p>
    <% unless entry.content.nil? %>
      <div class="entry-content" data-id="<%= entry.id %>">
        <%= entry.content.html_safe %>
      </div>
    <% else %>
      <div class="entry-description" data-id="<%= entry.id %>">
        <%= entry.description.html_safe %>
      </div>
    <% end %>
    <%= button_to "Mark as Read", api_readings_url, :data => {:id => entry.id}, :class => "mark-as-read" %>
    </div>
  <% end %>
</div>
</div>